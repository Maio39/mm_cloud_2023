@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    List<Anagrafica> elenco = null;
    if (ViewData.ContainsKey("max")) // && ViewData["max"]!=null) {
    {
        elenco = ViewData["max"] as List<Anagrafica>;
        //elenco = (List<Anagrafica>)ViewData["max"];
    }
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <ol>
        @for(int i = 0; i<10; i++)
        {
            <li>Ma la volpe @@ @i</li>
        }
        
    </ol>

    <hr />
    <ul>
        @foreach(string g in Model._data)
        {
            <li>@g</li>
        }
    </ul>
    <!-- tabella di anagrafiche -->
    <table>
        <thead>
            <tr>
                <th>firstname</th>
                <th>lastname</th>
            </tr>
        </thead>
        <tbody>
            <!-- ciclo anagrafiche -->
            @if (elenco != null && elenco.Count>0)
            {
                @foreach (Anagrafica a in elenco)
                {
                    <tr>
                        <td>@a.FirstName</td>
                        <td>@a.LastName</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>No data</td>
                    <td>No data</td>
                </tr>
            }
            <!-- end of ciclo anagrafiche-->
        </tbody>
    </table>
</div>
