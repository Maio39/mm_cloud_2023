@model Day13Lab2.Models.Zone

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Description</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TargetTemperature)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TargetTemperature)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Humidity)
        </dt>
        <dd class = "col-sm-10">
            @Model.Humidity.ToString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAlarm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.IsAlarm)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rilevazioni)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach(var temp in Model.Rilevazioni)
                {
                    <li>@temp.ToString()</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ZoneID">Edit</a> |
    <a asp-action="Create" asp-controller="Temperatures" asp-route-ZoneID="@Model?.ZoneID">Add New Temperature</a> |
    <a asp-action="Index">Back to List</a>
</div>
