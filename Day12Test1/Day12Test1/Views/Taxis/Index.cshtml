@model IEnumerable<Day12Test1.Models.Taxi>

@{
    ViewData["Title"] = "Index";
}

<h1>All Taxi</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaxiName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBusy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                Number Races
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaxiName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBusy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @item.Races.Count()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TaxiId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TaxiId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TaxiId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
